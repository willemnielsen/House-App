<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.housemateListScreen.addHousemate.AddHousemateFragment">

    <Button
        android:id="@+id/addButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:elevation="4dp"
        android:fontFamily="@font/rubik_bold"
        android:text="@string/add_housemate"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/square"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <Button
        android:id="@+id/previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="158dp"
        android:layout_marginTop="114dp"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/rubik_bold"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addButton"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/type_housemate_name"
        android:layout_width="81dp"
        android:layout_height="48dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/label_housemate_name"
        app:layout_constraintEnd_toEndOf="@+id/square"
        app:layout_constraintHorizontal_bias="0.239"
        app:layout_constraintStart_toEndOf="@+id/label_housemate_name"
        app:layout_constraintTop_toTopOf="@+id/label_housemate_name"
        app:layout_constraintVertical_bias="0.518"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <TextView
        android:id="@+id/label_housemate_name"
        android:layout_width="114dp"
        android:layout_height="21dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="127dp"
        android:fontFamily="@font/rubik_bold"
        android:labelFor="@id/type_housemate_name"
        android:text="@string/name"
        android:textAlignment="textStart"
        android:textAppearance="@style/item_labels"
        app:layout_constraintEnd_toEndOf="@+id/square"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/square"
        app:layout_constraintTop_toBottomOf="@+id/add_title" />

    <View
        android:id="@+id/square"
        android:layout_width="289dp"
        android:layout_height="284dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/square"
        android:elevation="4dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264" />

    <TextView
        android:id="@+id/add_title"
        android:layout_width="276dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/rubik_bold"
        android:text="@string/add_housemate"
        android:textAlignment="center"
        android:textAppearance="@style/add_item"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/square"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/square"
        app:layout_constraintTop_toTopOf="@+id/square" />

</androidx.constraintlayout.widget.ConstraintLayout>

